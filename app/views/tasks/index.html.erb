<h1>Tasks-List :</h1>
<% @tasks.each do |task| %>
<ul>
  <li>
    Task : <%= task.description%> // Status : <%= task.status %>
    <%= link_to "Show", task_path(task) %>
    <%= link_to "Update", edit_task_path(task) %>
    <%= link_to "Delete", task_path(task),
    method: :delete,
    data: { confirm: "Think twice about it" } %>
  </li>
</ul>
<% end %>
<%= link_to "Add a task", new_task_path %>
